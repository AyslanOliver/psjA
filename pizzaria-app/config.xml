<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pizzaria.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Pizzaria App</name>
    <description>Sistema de gestão para pizzaria com delivery</description>
    <author email="contato@pizzaria.com" href="https://pizzaria.com">
        Pizzaria Team
    </author>
    <content src="index.html" />
    
    <!-- Configurações globais -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    
    <!-- Acesso à rede -->
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Configurações específicas do Android -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Permissões -->
        <uses-permission android:name="android.permission.BLUETOOTH" />
        <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        
        <!-- Ícone e splash screen serão adicionados posteriormente -->
    </platform>
    
    <!-- Configurações específicas do iOS -->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <!-- Ícones serão adicionados posteriormente -->
    </platform>
    
    <!-- Política de segurança de conteúdo -->
    <access origin="*" />
    <access origin="http://*" />
    <access origin="https://*" />
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="^0.4.7" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    <plugin name="cordova-plugin-file" spec="^8.0.0" />
    <plugin name="cordova-plugin-device" spec="^2.1.0" />
</widget>
